<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/overlay_background"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Play/Pause Button -->
    <ImageView
        android:id="@+id/overlay_play_pause"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:src="@android:drawable/ic_media_pause"
        android:contentDescription="Pause Workout"
        android:clickable="true"
        android:focusable="true" />

    <!-- Divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="28dp"
        android:background="#555555"
        android:layout_marginEnd="12dp" />

    <!-- Time -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/overlay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME"
            android:textSize="9sp"
            android:textColor="#AAAAAA" />
    </LinearLayout>

    <!-- Power -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/overlay_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFB300" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WATTS"
            android:textSize="9sp"
            android:textColor="#FFB300" />
    </LinearLayout>

    <!-- Cadence -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/overlay_cadence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4FC3F7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RPM"
            android:textSize="9sp"
            android:textColor="#4FC3F7" />
    </LinearLayout>

    <!-- Resistance -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/overlay_resistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#81C784" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RES%"
            android:textSize="9sp"
            android:textColor="#81C784" />
    </LinearLayout>

    <!-- Heart Rate -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/overlay_heart_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E57373" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BPM"
            android:textSize="9sp"
            android:textColor="#E57373" />
    </LinearLayout>

    <!-- Calories -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/overlay_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF8A65" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KCAL"
            android:textSize="9sp"
            android:textColor="#FF8A65" />
    </LinearLayout>

</LinearLayout>
